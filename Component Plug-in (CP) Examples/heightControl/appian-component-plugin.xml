<?xml version="1.0" encoding="UTF-8"?>
<appian-component-plugin name="Height Control Example" key="com.appian.plugin.component.heightControl">
  <plugin-info>
    <description>An example of controling height in a component plug-in</description>
    <vendor name="Appian" url="http://www.appian.com" />
    <support supported="false" url="https://community.appian.com"/>
    <version>1.0.0</version>
  </plugin-info>

  <component rule-name="heightControl" version="1.0.0">
    <sdk-version>2.0.0</sdk-version>
    <icon-name>arrows-v</icon-name>
    <parameter>
      <name>contentHeight</name>
      <category>input-only</category>
      <type>Text</type>
    </parameter>
    <parameter>
      <name>adaptHeight</name>
      <category>input-only</category>
      <type>Boolean</type>
    </parameter>
    <html-entry-point>index.html</html-entry-point>
    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
  </component>
</appian-component-plugin>
